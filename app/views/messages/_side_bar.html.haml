.side-ber
  .side-ber__user-name 
    .side-ber__user-name__top-items
      .side-ber__user-name__top-items__name
        = current_user.name
      .side-ber__user-name__top-items__icons
        = link_to new_group_path do
          = icon("far","edit")
        
        = link_to edit_user_path(current_user) do
          = icon("fas", "cog")
        

  .side-ber__group-list
    - current_user.groups.each do |group|
      .side-ber__group-list__chat-information
        = link_to group_messages_path(group) do
          .side-ber__group-list__chat-information__group-name
            = group.name
          .side-ber__group-list__chat-information__have-messege
            = group.show_last_message

